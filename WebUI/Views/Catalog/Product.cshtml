@{
    ViewBag.Title = "Product";
    ViewBag.PageName = "product";
}

@model WebUI.Models.Catalog.ProductVM

@section Content {
    <section class="product-view">
		<div class="container">
			<div class="row">
				<div class="col-sm-3">
					@Html.Action("LeftBar")
				</div>
				<div class="col-sm-9">

					@*<ul class="nav-alt clearfix">
						<li>
							<a href="#">Home</a>
